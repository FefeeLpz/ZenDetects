---
import '@fontsource-variable/onest';
import Header from '../components/Header.astro';
import Hero from '../components/Hero.astro';
import Productos from '../components/Productos.astro';
import Logo from './public/logo.png';
import PorqueElegirnos from '../components/PorqueElegirnos.astro';
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative h-full">
		<div 
		class="absolute top-0 bottom-0 z-[-2] h-full w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(255,0,0,0.1),rgba(255,255,255,0))]"
		>
		</div>
		<Header />
		<Hero />
		<Productos />
		<PorqueElegirnos />
	</body>
</html>
<style>
	body{
		font-family: 'Onest Variable', sans-serif;
		
	}
</style>
